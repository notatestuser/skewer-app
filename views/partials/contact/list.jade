div(ng-show='isWorking()')
   p Working

div(ng-show='!isWorking()')

   // This div is only displayed in deskcops (see below for mobile phones)
   .hidden-phone
      div(style='float: left')
         div(style='margin-bottom: 10px;')
            input.search-query(type='text', ng-model='searchTerm', placeholder='Search')
            p.btn.btn-primary(ng-click='doSearch(searchString)')
               | Go
      div(style='float: right')
         a.btn.btn-primary(href='#/new') New
      table.table(width='80%')
         thead
            tr
               th.hidden-phone Id
               th Name
               th Created at
               th Owner
         tbody
            tr(ng-repeat='opportunity in opportunities')
               td.hidden-phone {{opportunity.Id}}
               td
                  a(href='#/designer/{{opportunity.Id}}') {{opportunity.Name}}
               td {{opportunity.CreatedDate}}
               td {{opportunity.OwnerId}}

   // This div is only displayed in mobile phones (see above for desktops)
   .visible-phone
      form.form-inline
         input.input-medium.search-query(type='text', ng-model='searchTerm', placeholder='Search')
         button.btn.btn-primary(ng-click='doSearch(searchString)') Go
         button.btn.btn-default(ng-click='doCreate()') &nbsp;&plus;&nbsp;
      table.table
         tr(ng-click='doView(opportunity.Id)', ng-repeat='opportunity in opportunities')
            td
               | {{opportunity.Name}}
               br
               small
                  i {{opportunity.Id}}
            td
               i.icon-chevron-right
