div.modal-body.clearfix

   h4.pull-left(style='margin: 3px;')
      | Aspect ratio: {{editorContext.aspectRatio}}
      b(ng-hide='editorContext.inEditMode')
         |  (LOCKED)

   .pull-right(
         ng-switch='editorContext.inEditMode',
         ng-click='editorContext.inEditMode = !editorContext.inEditMode')
      .btn.btn-small.btn-warning(ng-switch-when='true')
         | Disable edit mode
      .btn.btn-small(ng-switch-when='false')
         | Enable edit mode

section.pitch-editor

   .pitch-component(
         data-base-component,
         ng-repeat='component in components',
         ng-switch='component.type')

      aside.control-buttons.fade.btn-group.btn-group-vertical.hidden-desktop(
            ng-class='{"in": editorContext.inEditMode}')
         a.btn.btn-medium(
               ng-click='addComponent()')
            | +
         a.btn.btn-medium.btn-danger(
               ng-click='removeComponentAt($index)')
            | &times;

      aside.control-buttons.fade.btn-group.btn-group-vertical.visible-desktop(
            ng-class='{"in": editorContext.inEditMode}')
         a.btn.btn-large(
               ng-click='addComponent()')
            | +
         a.btn.btn-large.btn-danger(
               ng-click='removeComponentAt($index)')
            | &times;

      div.component-body.image-component-body(
            ng-switch-when='image',
            ng-click='triggerEditComponent(component)',
            data-index='{{$index}}',
            data-is-first='{{$first}}',
            data-type='{{component.type}}',
            class='{{getComponentClass(component)}}')

      div.component-body.text-component-body.well(
            ng-switch-when='text',
            ng-click='triggerEditComponent(component)',
            data-index='{{$index}}',
            data-is-first='{{$first}}',
            data-type='{{component.type}}',
            class='{{getComponentClass(component)}}')
         {{component.content}}

div(data-component-edit-modal)
