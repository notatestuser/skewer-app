!!! 5
html( ng-app='AngularSFDemo'
      data-applies-branding
      data-applies-adaptive-font-sizing
      data-branding-type='html-and-body')
   head
      title Skewer App
      meta(name='viewport', content='width=device-width, initial-scale=1.0')

      link(href='css/bootstrap.min.css', rel='stylesheet')
      link(href='css/bootstrap-responsive.min.css', rel='stylesheet')
      link(href='css/bootstrap-theme.min.css', rel='stylesheet')
      link(href='css/ios7-bootstrap.css', rel='stylesheet')
      link(href='css/ui.css', rel='stylesheet')
      link(href='css/font-awesome.min.css', rel='stylesheet')
      link(href='css/app.css', rel='stylesheet')

   body(data-applies-branding
        data-branding-type='html-and-body')

      .navbar.navbar-inverse.navbar-fixed-top(
            data-hides-when-branding-applied
            ng-click='navigateBackHome()'
            ng-controller='LoginCtrl')
         .navbar-inner.top-level-navbar-inner: .container
            //- a.brand(href='#')

      .body-padder(data-hides-when-branding-applied)

      section.navbar.branded-navbar(ng-controller='LoginCtrl')
         .branded-logo-bar-container(
               ng-class='{"with-top-border": isBrandedRoute}'
               data-applies-branding
               data-branding-type='top-bar')
            aside.container.branded-logo-bar
               img.logo(
                  data-applies-branding
                  data-branding-type='top-bar-logo')
               //- a.brand(href='#')
                  | Skewer

      div.ng-view(ng-view
         ng-class='{"with-branding-borders": isBrandedRoute}'
         data-applies-branding,
         data-branding-type='main-view-container left-and-right-borders')

      section(data-component-edit-modal)

      script(type='text/javascript')
         //Get configuration from environment variables (via heroku or localhost env)
         var configFromEnv = {};
         configFromEnv.app_url   = '#{app_url}';
         configFromEnv.client_id = '#{client_id}';

      script(src='js/vendor/goinstant/platform.min.js')
      script(src='js/vendor/build.js')
      script(src='js/vendor/vendor.js')
      script(src='js/vendor/goinstant/goangular.min.js')
      script(src='js/sdk/sdk.js')
      script(src='js/init.js')
      script(src='js/models.js')
      script(src='js/services.js')
      script(src='js/app.js')
      script(src='js/directives.js')
      script(src='js/controllers.js')
